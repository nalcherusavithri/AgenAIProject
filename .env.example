# Azure OpenAI Configuration
# Get these values from your Azure OpenAI resource in the Azure Portal

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_api_key_here

# Your Azure OpenAI endpoint (should start with https:// and end with /)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Your deployment name (the name you gave your model deployment)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# API version (use one of the supported versions)
AZURE_OPENAI_API_VERSION=2024-02-01

# Optional: Logging level for debugging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_LEVEL=INFO

# Optional: Enable performance monitoring
PERFORMANCE_MONITORING=true